{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<section class="login-section">
  <div class="login-container">
    <h2>Create Account</h2>

    {{ form_start(registrationForm, {'attr': {'class': 'login-form'}}) }}

    <!-- Name fields side by side -->
    <div class="form-row">
      <div class="form-group">
        {{ form_label(registrationForm.firstName) }}
        {{ form_widget(registrationForm.firstName) }}
      </div>
      <div class="form-group">
        {{ form_label(registrationForm.lastName) }}
        {{ form_widget(registrationForm.lastName) }}
      </div>
    </div>

    <!-- Email -->
    <div class="form-group full-width">
      {{ form_label(registrationForm.email) }}
      {{ form_widget(registrationForm.email) }}
    </div>

    <!-- Password -->
    <div class="form-group full-width">
      {{ form_label(registrationForm.plainPassword) }}
      {{ form_widget(registrationForm.plainPassword) }}
    </div>

    <!-- Role Selection -->
    <div class="form-group full-width role-select">
      <label>{{ registrationForm.roles.vars.label }}</label>
      <div class="role-options">
        {% for role in registrationForm.roles %}
          <div class="role-option">
            {{ form_widget(role) }}
            {{ form_label(role) }}
          </div>
        {% endfor %}
      </div>
    </div>

    <!-- Submit -->
    <button type="submit" class="btn">Register</button>

    {{ form_end(registrationForm) }}
  </div>
</section>
{% endblock %}
