{% extends 'admin/base.html.twig' %}

{% block title %}Edit Destination{% endblock %}

{% block admin_content %}
<div class="crud-container">
    <div class="crud-card">
        <h1 class="title">Edit Destination</h1>

        {% if destination.image %}
            <div class="preview">
                <img src="{{ asset('uploads/images/' ~ destination.image) }}" alt="{{ destination.name }}" class="preview-img">
            </div>
        {% endif %}

        {{ include('admin/destinations/_form.html.twig', {'button_label': 'Update'}) }}

        <div class="actions">
            <a href="{{ path('app_destination_index') }}" class="btn small btn-back">Back</a>
            {{ include('admin/destinations/_delete_form.html.twig') }}
        </div>
    </div>
</div>

<style>
.crud-container { display: flex; justify-content: center; padding: 50px; font-family: 'Montserrat', sans-serif; }
.crud-card {
    background: #fff; border-radius: 15px; box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    width: 100%; max-width: 700px; padding: 40px; border: 1px solid #e0e0e0;
}
.title { text-align: center; color: #74C15A; font-family: 'Poppins', sans-serif; margin-bottom: 25px; }
.preview { text-align: center; margin-bottom: 20px; }
.preview-img { width: 200px; height: 150px; border-radius: 10px; object-fit: cover; border: 2px solid #74C15A; }
form { display: flex; flex-direction: column; gap: 15px; }
form input, form textarea, form select { width: 100%; padding: 10px; border: 1px solid #74C15A; border-radius: 8px; }
.actions { display: flex; justify-content: center; align-items: center; gap: 10px; margin-top: 30px; }
.btn { border-radius: 6px; font-weight: 600; text-decoration: none; padding: 6px 14px; font-size: 0.9rem; transition: 0.3s; cursor: pointer; }
.btn-back { border: 2px solid #74C15A; color: #74C15A; background: white; }
.btn-back:hover { background-color: #74C15A; color: white; }
form button.btn-delete {
    background-color: #dc3545; color: white; border: none; padding: 6px 14px; border-radius: 6px;
    font-weight: 600; font-size: 0.9rem; cursor: pointer;
}
form button.btn-delete:hover { background-color: #bb2d3b; }
</style>
{% endblock %}
