<form method="post"
      action="{{ path('admin_destinations_delete', {'id': id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this destination?');"
      class="delete-form">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ id) }}">
    <button type="submit" class="btn btn-delete">Delete</button>
</form>
