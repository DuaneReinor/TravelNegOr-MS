{% extends 'admin/base.html.twig' %}

{% block title %}User Management{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# âœ… DataTables v2 CSS CDN #}
    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css">
{% endblock %}


{% block admin_content %}
<div class="hotel-container">
    <div class="card">
        <div class="header-section">
        <h1>User Management</h1>
        <div class="header-controls">
            <a href="{{ path('admin_users_new') }}" class="btn-add">+ Add User</a>
            <div id="search-container"></div>
        </div>
        </div>


        <div class="table-wrapper">
            <table id="hotelTable"  class="hotel-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.firstName }} {{ user.lastName }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                {% for role in user.roles %}
                                    <span class="role-badge">{{ role|replace({'ROLE_': '', '_': ' '})|title }}</span>
                                {% endfor %}
                            </td>
                            <td>
                                <span class="status-badge active">Active</span>
                            </td>
                            <td class="actions">
                                <a href="{{ path('admin_users_show', {'id': user.id}) }}" class="btn-action view">View</a>
                                <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="btn-action edit">Edit</a>
                                {{ include('admin/users/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td class="no-data">No users found.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

   
        
            </div>
        </div>
    </div>

 {% block javascripts %}



    
    <script src="https://cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            new DataTable('#hotelTable', {
                pageLength: 10,
                searchable: true,
                fixedHeight: true,
                language: {
                    searchPlaceholder: "Search users...",
                    lengthMenu: "Show _MENU_ entries per page"
                }
            });
        });
    </script>
{% endblock %}


