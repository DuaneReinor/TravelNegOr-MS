        text-decoration: none;
        transition: 0.3s;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
    .btn-add:hover {
        background-color: #5ca74b;
    }

    /* Table Wrapper */
    .table-wrapper {
        overflow-x: auto;
    }

    /* Table Styling */
    .hotel-table {
        width: 100%;
        border-collapse: collapse;
        text-align: center;
        border-radius: 8px;
        overflow: hidden;
        background-color: #ffffff;
    }

    .hotel-table th, .hotel-table td {
        padding: 12px 15px;
        border-bottom: 1px solid #ddd;
        vertical-align: middle;
    }

    .hotel-table th {
        background-color: #74C15A;
        color: white;
        font-weight: 600;
    }

    .hotel-table tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .hotel-table tr:hover {
        background-color: #f2fdf3;
    }

    /* Role and Status Badges */
    .role-badge {
        display: inline-block;
        background-color: #007bff;
        color: white;
        padding: 2px 8px;
        border-radius: 12px;
        font-size: 11px;
        font-weight: 600;
        margin: 2px;
    }

    .status-badge {
        display: inline-block;
        padding: 2px 8px;
        border-radius: 12px;
        font-size: 11px;
        font-weight: 600;
    }

    .status-badge.active {
        background-color: #28a745;
        color: white;
    }

    /* Action Buttons */
    .actions {
        display: flex;
        justify-content: center;
        gap: 6px;
    }

    .btn-action {
        padding: 6px 10px;
        border-radius: 6px;
        text-decoration: none;
        color: white;
        font-size: 13px;
        font-weight: 600;
        transition: 0.3s;
    }

    .btn-action.view {
        background-color: #6c757d;
    }
    .btn-action.edit {
        background-color: #007bff;
    }
    /* Make delete button red */
    .btn-action.delete,
    button.btn-action.delete {
        background-color: #dc3545;
        color: white;
        border: none;
        cursor: pointer;
    }

    .btn-action.delete:hover,
    button.btn-action.delete:hover {
        background-color: #bb2d3b;
        color: white;
    }

    .btn-action:hover {
        opacity: 0.85;
    }

    .no-data {
        text-align: center;
        color: #888;
        padding: 20px 0;
    }
