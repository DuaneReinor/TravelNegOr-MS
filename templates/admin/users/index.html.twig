        display: flex;
        justify-content: center;
    }

    /* Card wrapper - this stays white even with background image */
    .card {
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        width: 100%;
        max-width: 1100px;
        padding: 30px;
        border: 1px solid #e0e0e0;
    }

    /* Header Section */
    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

    .header-section h1 {
        font-family: 'Poppins', sans-serif;
        color: #333;
        font-size: 28px;
        margin: 0;
    }

    .btn-add {
        background-color: #74C15A;
