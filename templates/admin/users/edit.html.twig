{% extends 'admin/base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block admin_content %}
<div class="edit-page-container">
    <div class="edit-header">
        <div class="edit-breadcrumb">
            <a href="{{ path('admin_users_index') }}" class="breadcrumb-link">
                <i class="icon-arrow-left"></i>
                Back to Users
            </a>
        </div>
        <div class="edit-title-section">
            <h1 class="edit-page-title">
                <i class="icon-user-edit"></i>
                Edit User Profile
            </h1>
            <p class="edit-page-subtitle">Update user information and account settings</p>
        </div>
    </div>

    <div class="edit-content-wrapper">
        <div class="edit-main-content">
            {{ include('admin/shared/_form.html.twig', {
                'form': form,
                'button_label': 'Update User'
            }) }}
        </div>
    </div>
</div>
{% endblock %}

{% block styles %}
<style>
/* ===== CSS VARIABLES ===== */
:root {
    /* Colors */
    --primary-color: #6366f1;
    --primary-light: #8b5cf6;
    --primary-dark: #4f46e5;
    --secondary-color: #64748b;
    --success-color: #10b981;
    --warning-color: #f59e0b;
    --danger-color: #ef4444;
    --info-color: #06b6d4;
    
    /* Grays */
    --gray-50: #f8fafc;
    --gray-100: #f1f5f9;
    --gray-200: #e2e8f0;
    --gray-300: #cbd5e1;
    --gray-400: #94a3b8;
    --gray-500: #64748b;
    --gray-600: #475569;
    --gray-700: #334155;
    --gray-800: #1e293b;
    --gray-900: #0f172a;
    
    /* Background */
    --bg-primary: #ffffff;
    --bg-secondary: #f8fafc;
    --bg-tertiary: #f1f5f9;
    
    /* Text */
    --text-primary: #0f172a;
    --text-secondary: #475569;
    --text-muted: #64748b;
    
    /* Borders */
    --border-color: #e2e8f0;
    --border-light: #f1f5f9;
    --border-radius: 12px;
    --border-radius-sm: 8px;
    --border-radius-lg: 16px;
    
    /* Shadows */
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
    
    /* Spacing */
    --space-xs: 0.25rem;
    --space-sm: 0.5rem;
    --space-md: 1rem;
    --space-lg: 1.5rem;
    --space-xl: 2rem;
    --space-2xl: 3rem;
    
    /* Typography */
    --font-size-xs: 0.75rem;
    --font-size-sm: 0.875rem;
    --font-size-base: 1rem;
    --font-size-lg: 1.125rem;
    --font-size-xl: 1.25rem;
    --font-size-2xl: 1.5rem;
    --font-size-3xl: 1.875rem;
}

/* ===== BASE STYLES ===== */
.edit-page-container {
    min-height: 100vh;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: var(--space-xl);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* ===== HEADER SECTION ===== */
.edit-header {
    margin-bottom: var(--space-2xl);
}

.edit-breadcrumb {
    margin-bottom: var(--space-lg);
}

.breadcrumb-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: var(--font-size-sm);
    font-weight: 500;
    padding: var(--space-sm) var(--space-md);
    border-radius: var(--border-radius-sm);
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
}

.breadcrumb-link:hover {
    color: white;
    background: rgba(255, 255, 255, 0.2);
    transform: translateX(-2px);
}

.edit-title-section {
    text-align: center;
    color: white;
}

.edit-page-title {
    font-size: var(--font-size-3xl);
    font-weight: 700;
    margin: 0 0 var(--space-sm) 0;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-md);
}

.edit-page-subtitle {
    font-size: var(--font-size-lg);
    opacity: 0.9;
    margin: 0;
}

/* ===== CONTENT LAYOUT ===== */
.edit-content-wrapper {
    max-width: 800px;
    margin: 0 auto;
}

.edit-main-content {
    background: var(--bg-primary);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-xl);
    overflow: hidden;
}

/* ===== RESPONSIVE DESIGN ===== */
@media (max-width: 768px) {
    .edit-page-container {
        padding: var(--space-md);
    }
    
    .edit-page-title {
        font-size: var(--font-size-2xl);
        flex-direction: column;
        gap: var(--space-sm);
    }
}

@media (max-width: 480px) {
    .edit-page-container {
        padding: var(--space-sm);
    }
}

/* ===== ICONS ===== */
[class^="icon-"], [class*=" icon-"] {
    font-family: "Font Awesome 5 Free";
    font-weight: 900;
    font-style: normal;
    font-variant: normal;
    text-rendering: auto;
    line-height: 1;
}

.icon-arrow-left::before { content: "\f060"; }
.icon-user-edit::before { content: "\f4ff"; }
</style>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Track form changes
    const form = document.querySelector('.admin-form');
    if (form) {
        trackFormChanges(form);
    }
});

// ===== FORM TRACKING =====
function trackFormChanges(form) {
    const formFields = form.querySelectorAll('.form-control');
    const originalValues = {};
    
    // Store original values
    formFields.forEach(field => {
        if (field.type !== 'file') {
            originalValues[field.name] = field.value;
        }
    });
    
    // Mark changed fields
    formFields.forEach(field => {
        field.addEventListener('input', function() {
            const fieldGroup = this.closest('.form-group');
            
            if (this.value !== originalValues[this.name]) {
                this.classList.add('changed');
                if (fieldGroup) fieldGroup.classList.add('field-changed');
            } else {
                this.classList.remove('changed');
                if (fieldGroup) fieldGroup.classList.remove('field-changed');
            }
        });
        
        // Special handling for role changes
        if (field.name === 'roles') {
            field.addEventListener('change', function() {
                // Show notification for role changes
                showNotification('Role changes will be applied when you save the form.', 'info');
            });
        }
    });
    
    // Form submission enhancement
    form.addEventListener('submit', function(e) {
        const changedFields = form.querySelectorAll('.form-control.changed');
        
        if (changedFields.length === 0) {
            e.preventDefault();
            showNotification('No changes detected. Please modify some fields before submitting.', 'warning');
            return;
        }
        
        // Show loading state
        const submitBtn = form.querySelector('button[type="submit"]');
        if (submitBtn) {
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="icon-spinner fa-spin"></i> Updating...';
        }
    });
}

// ===== NOTIFICATION SYSTEM =====
function showNotification(message, type = 'info') {
    // Create notification element
    const notification = document.createElement('div');
    notification.className = `notification notification-${type}`;
    notification.innerHTML = `
        <div class="notification-content">
            <i class="icon-${type === 'success' ? 'check-circle' : type === 'error' ? 'times-circle' : 'info-circle'}"></i>
            <span>${message}</span>
        </div>
        <button class="notification-close" onclick="this.parentElement.remove()">
            <i class="icon-times"></i>
        </button>
    `;
    
    // Add to page
    document.body.appendChild(notification);
    
    // Auto remove after 5 seconds
    setTimeout(() => {
        if (notification.parentElement) {
            notification.remove();
        }
    }, 5000);
}

// Add notification styles dynamically
const notificationStyles = `
<style>
.notification {
    position: fixed;
    top: 20px;
    right: 20px;
    background: white;
    border-radius: 12px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    padding: 16px;
    display: flex;
    align-items: center;
    gap: 12px;
    z-index: 10000;
    min-width: 300px;
    animation: slideInRight 0.3s ease-out;
    border-left: 4px solid;
}

.notification-success {
    border-left-color: #10b981;
}

.notification-error {
    border-left-color: #ef4444;
}

.notification-warning {
    border-left-color: #f59e0b;
}

.notification-info {
    border-left-color: #6366f1;
}

.notification-content {
    display: flex;
    align-items: center;
    gap: 8px;
    flex: 1;
}

.notification-close {
    background: none;
    border: none;
    color: #64748b;
    cursor: pointer;
    padding: 4px;
    border-radius: 4px;
    transition: all 0.2s ease;
}

.notification-close:hover {
    background: #f1f5f9;
    color: #374151;
}

@keyframes slideInRight {
    from {
        opacity: 0;
        transform: translateX(100%);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}
</style>
`;

document.head.insertAdjacentHTML('beforeend', notificationStyles);
</script>
{% endblock %}
