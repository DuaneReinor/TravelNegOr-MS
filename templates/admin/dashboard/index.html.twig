{% extends 'admin/base.html.twig' %}
{% block title %}Admin Dashboard{% endblock %}

{% block admin_content %}
<div class="dashboard-container">
    <div class="dashboard-card">
        <div class="header-section">
            <h1>Dashboard Overview</h1>
        </div>

        <div class="stats-container">
            <div class="stat-box admin">
                <h2>Admins</h2>
                <p>{{ adminCount }}</p>
            </div>

            <div class="stat-box client">
                <h2>Clients / Customers</h2>
                <p>{{ clientCount }}</p>
            </div>
        </div>
    </div>
</div>

<style>

.body{
    
}

.dashboard-container {
 
    font-family: 'Montserrat', sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 50vh; 
 
}

.dashboard-card {
    background: #ffffff;
    border-radius: 15px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    width: 100%;
    max-width: 900px;
    padding: 30px;
}

.header-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
}

.header-section h1 {
    font-family: 'Poppins', sans-serif;
    font-size: 28px;
    color: #333;
    margin: 0;
}

.stats-container {
    display: flex;
    justify-content: space-around;
    gap: 30px;
    flex-wrap: wrap;
}

.stat-box {
    color: white;
    border-radius: 12px;
    padding: 30px;
    width: 300px;
    text-align: center;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.stat-box h2 {
    margin-bottom: 10px;
    font-size: 22px;
    font-family: 'Poppins', sans-serif;
}

.stat-box p {
    font-size: 36px;
    font-weight: bold;
    margin: 0;
}

.stat-box.admin {
    background-color: #007bff;
}

.stat-box.client {
    background-color: #74C15A;
}

.stat-box:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 15px rgba(0,0,0,0.15);
}
</style>
{% endblock %}
