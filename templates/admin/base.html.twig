<!DOCTYPE html>
<html lang="en">
<head>

  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% block title %}Admin - Travel NegOr{% endblock %}</title>
  <link rel="icon" href="{{ asset('images/travelnegor.png') }}">
  <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&display=swap" rel="stylesheet">

</head>
<body>

  <!-- ✅ Top Navbar -->
  <header class="admin-navbar">
  <div class="admin-left-group">
    <div class="admin-title">
      <span class="admin-logo">Travel <strong>NegOr</strong></span>
      <span class="admin-subtitle">{{ is_granted('ROLE_ADMIN') ? 'Admin Panel' : 'Staff Panel' }}</span>
    </div>
  </div>

  <div class="admin-right-group">
    <span class="admin-welcome">Welcome, {{ app.user ? app.user.firstName : 'Guest' }}</span>
    <a href="{{ path('app_logout') }}" class="logout-btn">Logout</a>
  </div>
</header>


  <!-- ✅ Sidebar + Main Content -->
  <div class="admin-layout">
    <aside class="admin-sidebar">
     
      <ul>
        <li><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
        
        {% if is_granted('ROLE_ADMIN') %}
          <li><a href="{{ path('admin_hotels') }}">Hotels</a></li>
          <li><a href="{{ path('admin_users') }}">Users</a></li>
        {% endif %}
        
        {% if is_granted('ROLE_ADMIN') %}
          <li><a href="{{ path('admin_destinations_index') }}">Destinations</a></li>
          <li><a href="{{ path('admin_activity_logs_index') }}">Activity Logs</a></li>
        {% else %}
          <li><a href="{{ path('staff_destinations_index') }}">Destinations</a></li>
        {% endif %}
       
      </ul>
    </aside>

    <main class="admin-content">
      {% block admin_content %}{% endblock %}
    </main>
  </div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>

</body>
</html>
