    {% extends 'admin/base.html.twig' %}

    {% block title %}Hotel Management{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# ✅ DataTables v2 CSS CDN #}
    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css">
{% endblock %}


    {% block admin_content %}
    <div class="hotel-container">
        <div class="card">
            <div class="header-section">
            <h1>Hotel Management</h1>
            <div class="header-controls">
                <a href="{{ path('admin_hotels_new') }}" class="btn-add">+ Add Hotel</a>
                <div id="search-container"></div>
            </div>
            </div>


            <div class="table-wrapper">
                <table id="hotelTable"  class="hotel-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Location</th>
                            <th>Price</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for hotel in hotels %}
                            <tr>
                                <td>{{ hotel.id }}</td>
                                <td>{{ hotel.name }}</td>
                                <td>{{ hotel.location }}</td>
                                <td>₱{{ hotel.price }}</td>
                                <td>{{ hotel.description|length > 30 ? hotel.description|slice(0, 30) ~ '...' : hotel.description }}</td>
                                <td>
                                    {% if hotel.image %}
                                        <img src="{{ asset('uploads/images/' ~ hotel.image) }}" alt="{{ hotel.name }}" class="hotel-thumb">
                                    {% else %}
                                        <em>No image</em>
                                    {% endif %}
                                </td>
                                <td class="actions">
                                    <a href="{{ path('admin_hotels_show', {'id': hotel.id}) }}" class="btn-action view">View</a>
                                    <a href="{{ path('admin_hotels_edit', {'id': hotel.id}) }}" class="btn-action edit">Edit</a>
                                    {{ include('admin/hotels/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="no-data">No hotels found.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

   
        
            </div>
        </div>
    </div>

 {% block javascripts %}


    
    <script src="https://cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            new DataTable('#hotelTable', {
                pageLength: 10,
                searchable: true,
                fixedHeight: true,
                language: {
                    searchPlaceholder: "Search hotels...",
                    lengthMenu: "Show _MENU_ entries per page"
                }
            });
        });
    </script>
{% endblock %}


    <style>

   #search-container {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 10px;
}

.dataTables_filter {
    display: flex;
    align-items: center;
    margin: 0 !important;
}

.dataTables_filter label {
    font-weight: 600;
    color: #333;
    margin-right: 5px;
}

.dataTables_filter input {
    border-radius: 8px;
    border: 1px solid #ccc;
    padding: 6px 10px;
    width: 200px;
    transition: 0.3s;
    
}

.dataTables_filter input:focus {
    border-color: #74C15A;
    box-shadow: 0 0 5px rgba(116,193,90,0.3);
    outline: none;
}

    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
    }

    .header-controls {
        display: flex;
        align-items: center;
        gap: 15px;
        flex-wrap: wrap;
    }

 



    /* Container Setup */
    .hotel-container {
        padding: 40px;
        background: transparent; /* allow your page background image to show */
        font-family: 'Montserrat', sans-serif;
        display: flex;
        justify-content: center;
    }

    /* Card wrapper - this stays white even with background image */
    .card {
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        width: 100%;
        max-width: 1100px;
        padding: 30px;
        border: 1px solid #e0e0e0;
    }

    /* Header Section */
    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

    .header-section h1 {
        font-family: 'Poppins', sans-serif;
        color: #333;
        font-size: 28px;
        margin: 0;
    }

    .btn-add {
        background-color: #74C15A;
        color: #fff;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: 0.3s;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
    .btn-add:hover {
        background-color: #5ca74b;
    }

    /* Table Wrapper */
    .table-wrapper {
        overflow-x: auto;
    }

    /* Table Styling */
    .hotel-table {
        width: 100%;
        border-collapse: collapse;
        text-align: center;
        border-radius: 8px;
        overflow: hidden;
        background-color: #ffffff;
    }

    .hotel-table th, .hotel-table td {
        padding: 12px 15px;
        border-bottom: 1px solid #ddd;
        vertical-align: middle;
    }

    .hotel-table th {
        background-color: #74C15A;
        color: white;
        font-weight: 600;
    }

    .hotel-table tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .hotel-table tr:hover {
        background-color: #f2fdf3;
    }

    /* Image Styling */
    .hotel-thumb {
        width: 60px;
        height: 45px;
        object-fit: cover;
        border-radius: 6px;
        border: 1px solid #ccc;
    }

    /* Action Buttons */
    .actions {
        display: flex;
        justify-content: center;
        gap: 6px;
    }

    .btn-action {
        padding: 6px 10px;
        border-radius: 6px;
        text-decoration: none;
        color: white;
        font-size: 13px;
        font-weight: 600;
        transition: 0.3s;
    }

    .btn-action.view {
        background-color: #6c757d;
    }
    .btn-action.edit {
        background-color: #007bff;
    }
    /* Make delete button red */
    .btn-action.delete,
    button.btn-action.delete {
        background-color: #dc3545;
        color: white;
        border: none;
        cursor: pointer;
    }

    .btn-action.delete:hover,
    button.btn-action.delete:hover {
        background-color: #bb2d3b;
        color: white;
    }

    .btn-action:hover {
        opacity: 0.85;
    }

    .no-data {
        text-align: center;
        color: #888;
        padding: 20px 0;
    }
    </style>
    {% endblock %}
