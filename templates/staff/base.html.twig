<!DOCTYPE html>
<html lang="en">
<head>

  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% block title %}Staff - Travel NegOr{% endblock %}</title>
  <link rel="icon" href="{{ asset('images/travelnegor.png') }}">
  <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&display=swap" rel="stylesheet">

</head>
<body>

  <!-- ✅ Top Navbar -->
  <header class="admin-navbar">
  <div class="admin-left-group">
    <div class="admin-title">
      <span class="admin-logo">Travel <strong>NegOr</strong></span>
      <span class="admin-subtitle">Staff Panel</span>
    </div>
  </div>

  <div class="admin-right-group">
    <span class="admin-welcome">Welcome, {{ app.user ? app.user.firstName : 'Guest' }}</span>
    <a href="{{ path('app_logout') }}" class="logout-btn">Logout</a>
  </div>
</header>


  <!-- ✅ Sidebar + Main Content -->
  <div class="admin-layout">
    <aside class="admin-sidebar">
     
      <ul>
        <li><a href="{{ path('staff_dashboard') }}">Dashboard</a></li>
        <li><a href="{{ path('staff_destinations_index') }}">Destinations</a></li>

        <li><a href="{{ path('staff_hotels_index') }}">Hotels</a></li>
      </ul>
    </aside>

    <main class="admin-content">
      {% block staff_content %}{% endblock %}
    </main>
  </div>

</body>
</html>