{% extends 'staff/base.html.twig' %}

{% block title %}Edit Hotel{% endblock %}

{% block staff_content %}
<div class="admin-section">
    <div class="page-header">
        <h1>Edit Hotel</h1>
        <a href="{{ path('staff_hotels_index') }}" class="btn-view">‚Üê Back to Hotels</a>
    </div>

    <div class="form-container">
        {% if form.vars.errors|length > 0 %}
            <div class="alert alert-danger" role="alert">
                <strong>Form has errors!</strong>
                <ul>
                    {% for error in form.vars.errors %}
                        <li>{{ error.message }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}

        {{ form_start(form) }}
            <div class="form-grid">
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                    {% if form.name.vars.errors|length > 0 %}
                        <div class="field-error">
                            {% for error in form.name.vars.errors %}
                                <span>{{ error.message }}</span>
                            {% endfor %}
                        </div>
                    {% endif %}
                    {{ form_errors(form.name) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.location) }}
                    {{ form_widget(form.location) }}
                    {% if form.location.vars.errors|length > 0 %}
                        <div class="field-error">
                            {% for error in form.location.vars.errors %}
                                <span>{{ error.message }}</span>
                            {% endfor %}
                        </div>
                    {% endif %}
                    {{ form_errors(form.location) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.price) }}
                    {{ form_widget(form.price) }}
                    {% if form.price.vars.errors|length > 0 %}
                        <div class="field-error">
                            {% for error in form.price.vars.errors %}
                                <span>{{ error.message }}</span>
                            {% endfor %}
                        </div>
                    {% endif %}
                    {{ form_errors(form.price) }}
                </div>

                <div class="form-group full-width">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                    {% if form.description.vars.errors|length > 0 %}
                        <div class="field-error">
                            {% for error in form.description.vars.errors %}
                                <span>{{ error.message }}</span>
                            {% endfor %}
                        </div>
                    {% endif %}
                    {{ form_errors(form.description) }}
                </div>

                <div class="form-group full-width">
                    {{ form_label(form.image) }}
                    {{ form_widget(form.image) }}
                    {% if form.image.vars.errors|length > 0 %}
                        <div class="field-error">
                            {% for error in form.image.vars.errors %}
                                <span>{{ error.message }}</span>
                            {% endfor %}
                        </div>
                    {% endif %}
                    {{ form_errors(form.image) }}
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-add">Update Hotel</button>
                <a href="{{ path('staff_hotels_index') }}" class="btn-view">Cancel</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>

<style>
.admin-section {
    padding: 2rem;
}

.page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
}

.page-header h1 {
    font-size: 1.5rem;
    color: #333;
    margin: 0;
}

.alert {
    padding: 1rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
}

.alert-danger {
    background-color: #f8d7da;
    border: 1px solid #f5c6cb;
    color: #721c24;
}

.alert strong {
    font-weight: 700;
}

.alert ul {
    margin: 0.5rem 0 0 1.5rem;
    padding: 0;
}

.alert li {
    margin: 0.25rem 0;
}

.field-error {
    color: #721c24;
    font-size: 0.875rem;
    margin-top: 0.25rem;
    padding: 0.5rem;
    background-color: #f8d7da;
    border: 1px solid #f5c6cb;
    border-radius: 4px;
}

.field-error span {
    display: block;
}

.form-container {
    background: white;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    max-width: 800px;
}

.form-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin-bottom: 2rem;
}

.form-group {
    display: flex;
    flex-direction: column;
}

.form-group.full-width {
    grid-column: 1 / -1;
}

.form-group label {
    font-weight: 600;
    color: #333;
    margin-bottom: 0.5rem;
}

.form-group input,
.form-group textarea {
    padding: 0.75rem;
    border: 1.5px solid #74C15A;
    border-radius: 8px;
    font-size: 1rem;
    transition: border-color 0.3s ease;
}

.form-group input:focus,
.form-group textarea:focus {
    outline: none;
    border-color: #5ca74b;
    box-shadow: 0 0 6px rgba(116, 193, 90, 0.5);
}

.form-group textarea {
    min-height: 120px;
    resize: vertical;
}

.form-actions {
    display: flex;
    gap: 1rem;
    justify-content: flex-start;
}

.btn-add {
    background: #74C15A;
    color: white;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s;
    text-decoration: none;
    display: inline-block;
}

.btn-add:hover {
    background: #5ca74b;
}

.btn-view {
    background: #6c757d;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 500;
    transition: opacity 0.3s;
}

.btn-view:hover {
    opacity: 0.85;
}

@media (max-width: 768px) {
    .form-grid {
        grid-template-columns: 1fr;
    }
    
    .form-actions {
        flex-direction: column;
    }
}
</style>
{% endblock %}
